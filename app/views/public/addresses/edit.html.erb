<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">配送先登録 / 一覧</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
        <%= form_with model: @address, url: edit_address_path do |f| %>
        <div class="form-group row mb-1">
          <div class="col-lg-3">
            <p for="name">郵便番号(ハイフンなし)</p>
          </div>
          <div class="col-lg-3">
            <p><%= f.text_field :postal_code %></p>
          </div>
        </div>
        <div class="form-group row mb-1">
          <div class="col-lg-3">
            <p for="name">住所</p>
          </div>
          <div class="col-lg-5">
            <p><%= f.text_field :address,size: '50' %></p>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-3">
            <p for="name">氏名</p>
          </div>
          <div class="col-lg-4">
            <p><%= f.text_field :name %></p>
          </div>
          <div class="col-lg-3">
            <%= f.submit "変更内容を保存", class: 'btn btn-success'%>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

