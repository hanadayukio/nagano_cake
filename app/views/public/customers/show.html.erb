
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">マイページ</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto pb-4">
        <div class ="row pb-4">
          <h4 class="col-lg-2">登録情報</h4>
          <div class="col-lg-4">
            <%= link_to "編集する", customers_edit_path, class: 'btn btn-success'  %>
          </div>
        </div>
        <div class="row">
          <p class="col-lg-2 m-0 pl-1 border d-flex align-items-center" style="height: 40px; background-color: #f1f1f1;">氏名</p>
          <p class="col-lg-4 m-0 pl-1 border d-flex align-items-center" style="height: 40px;"><%= @customer.last_name%> <%= @customer.first_name%></p>
        </div>
        <div class="row">
          <p class="col-lg-2 m-0 pl-1 border d-flex align-items-center" style="height: 40px; background-color: #f1f1f1;">カナ</p>
          <p class="col-lg-4 m-0 pl-1 border d-flex align-items-center" style="height: 40px;"><%= @customer.last_name_kana%> <%= @customer.first_name_kana%></p>
        </div>
        <div class="row">
          <p class="col-lg-2 m-0 pl-1 border d-flex align-items-center" style="height: 40px; background-color: #f1f1f1;">郵便番号</p>
          <p class="col-lg-4 m-0 pl-1 border d-flex align-items-center" style="height: 40px;"><%= @customer.postal_code%></p>
        </div>
        <div class="row">
          <p class="col-lg-2 m-0 pl-1 border d-flex align-items-center" style="height: 40px; background-color: #f1f1f1;">住所</p>
          <p class="col-lg-4 m-0 pl-1 border d-flex align-items-center" style="height: 40px;"><%= @customer.address%></p>
        </div>
        <div class="row">
          <p class="col-lg-2 m-0 pl-1 border d-flex align-items-center" style="height: 40px; background-color: #f1f1f1;">電話番号</p>
          <p class="col-lg-4 m-0 pl-1 border d-flex align-items-center" style="height: 40px;"><%= @customer.telephone_number%></p>
        </div>
        <div class="row">
          <p class="col-lg-2 m-0 pl-1 border d-flex align-items-center" style="height: 40px; background-color: #f1f1f1;">メールアドレス</p>
          <p class="col-lg-4 m-0 pl-1 border d-flex align-items-center" style="height: 40px;"><%= @customer.email%></p>
        </div>
      </div>
      <div class ="row pb-3">
        <h4 class="col-lg-2">配送先</h4>
        <div class="col-lg-4">
          <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary'  %>
        </div>
      </div>
      <div class ="row pb-3">
        <h4 class="col-lg-2">注文履歴</h4>
        <div class="col-lg-4">
          <%= link_to "一覧を見る", public_orders_path, class: 'btn btn-primary'  %>
        </div>
      </div>
    </div>
  </div>
</div>