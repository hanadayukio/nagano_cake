<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">注文情報入力</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 px-5 px-sm-0">
      <table class="table table-hover tabel-inverse col-lg-12 ">
        <thead class="">
          <tr>
            <th class="col-lg-1 border border-dark">注文日</th>
            <th class="col-lg-3 border border-dark">配送先</th>
            <th class="col-lg-2 border border-dark">注文商品</th>
            <th class="col-lg-1 border border-dark">支払金額</th>
            <th class="col-lg-2 border border-dark">ステータス</th>
            <th class="col-lg-2 border border-dark">注文詳細</th>
          </tr>
        </thead>
          <% @orders.each do |order| %> 
         <tbody class="border border-dark">
          <tr>
            <th class="border border-dark"><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <th class="border border-dark">〒 <%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %></th>
            <th class="border border-dark">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %></br>
            <% end %>
            </th>
            <th class="border border-dark"><%= number_to_currency(order.billing_amount, unit: "", delimiter: ',', precision:0) %>円</th>
            <th class="border border-dark"><%= order.status_i18n %></th>
            <th class="border border-dark text-center"><%= link_to '表示する', public_order_path(order[:id]), class: 'btn btn-success' %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>