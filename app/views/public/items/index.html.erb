
<div class="container">
  <div class="row">
    <!--ジャンル検索-->
    <div class="col-sm-2 col-md-2 col-lg-2 px-5 px-sm-0">
      <div class="border border-dark align-items-center  mt-5">
        <div class="col-lg-12 px-5 px-sm-0 mx-auto">
          <p class="border-bottom border-dark justify-content-center text-center">ジャンル検索</p>
          <% @genres.each do |genre| %>
            <p class="pl-2"><%= genre.name %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9 px-5 px-sm-0 mx-auto">
      <h3 class="pt-5 mb-3">商品一覧 (全<%= @items_count %>件)</h3>
      <div class="d-flex flex-row flex-wrap col-lg-12 px-5 px-sm-0 mx-auto">
        <% @items.each do |item| %>
          <div class="flex-fill">
            <%= link_to image_tag(item.get_image(180, 180)), public_item_path(item) %>
            <p><%= item.name %></p>
            <p>¥<%= number_to_currency(item.price, unit: "", delimiter: ',', precision:0) %></p>
          </div>
        <% end %>
      </div>
      <div class="col-sm-12 d-flex justify-content-center">
        <ul class="pagination"><%= paginate @items %></ul>
      </div>
    </div>
  </div>
</div>
