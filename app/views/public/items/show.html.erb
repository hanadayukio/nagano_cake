
<div class="container">
  <div class="row">
    <!--ジャンル検索-->
    <div class="col-sm-2 col-md-2 col-lg-2 px-5 mx-5 px-sm-0">
      <div class="border border-dark align-items-center  mt-5">
        <div class="col-lg-12 px-5 px-sm-0 mx-auto">
          <p class="border-bottom border-dark justify-content-center text-center">ジャンル検索</p>
          <% @genres.each do |genre| %>
            <p class="pl-2"><%= genre.name %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 p-5 px-sm-0">
      <%= image_tag @item.get_image(250, 250) %>
    </div>
    <div class="col-sm-5 col-md-5 col-lg-5 p-5 px-sm-0">
      <h3><%= @item.name %></h3>
      <p class="mb-5"><%= @item.introduction %></p>
      <h6 class="mb-3">¥<%= number_to_currency(price_with_tax(@item.price), unit: "", delimiter: ',', precision:0) %>(税込)</h6>
      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.select :amount, (1..10), {}, {class: "form-control-sm"} %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit 'カートに入れる', class: 'btn btn-success ml-5' %>
      <% end %>
    </div>
  </div>
</div>
