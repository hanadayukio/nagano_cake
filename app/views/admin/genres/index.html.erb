<!--<h1>genre index</h1>-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">ジャンル一覧・追加</h3>
      <div class="col-lg-10 px-5 px-sm-0 mx-auto">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group row">
          <div class="col-sm-6">
          <label for="genre_name">ジャンル名</label>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.submit'新規登録', class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
        <table class="table table-hover table-inverse col-lg-8">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre|%>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する',edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>