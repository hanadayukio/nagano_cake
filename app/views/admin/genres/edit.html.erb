<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">ジャンル編集</h3>
      <div class="col-lg-10 px-5 px-sm-0 mx-auto">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
        <div class="form-group row">
          <div class="col-sm-6">
          <label for="genre_name">ジャンル名</label>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.submit'変更を保存', class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>