<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">新規会員登録</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer,url: admin_customer_path do |f| %>
          <div class="form-group row">
            <div class="col-lg-3">
              <p for="name">名前</p>
            </div>
            <div class="col-lg-3">
              <p><%= f.text_field :last_name %></p>
            </div>
            <div class="col-lg-4">
              <p><%= f.text_field :first_name %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-lg-3">
              <p for="name_kana">フリガナ</p>
            </div>
            <div class="col-lg-3">
              <p><%= f.text_field :last_name_kana %></p>
            </div>
            <div class="col-lg-4">
              <p><%= f.text_field :first_name_kana %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-lg-3">
              <p for="postal_code">郵便番号</p>
            </div>
            <div class="col-lg-3">
              <p><%= f.text_field :postal_code %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-lg-3">
              <p for="address">住所</p>
            </div>
            <div class="col-lg-3">
              <p><%= f.text_field :address, size: '75' %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-lg-3">
              <p for="telephone_number">電話番号</p>
            </div>
            <div class="col-lg-3">
              <p><%= f.text_field :telephone_number %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-lg-3">
              <p for="email">メールアドレス</p>
            </div>
            <div class="col-lg-3">
              <p><%= f.text_field :email %></p>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-3">
              <label for="customer_is_active">会員ステータス</label>
            </div>
            <div class="col-sm-1">
              <%= f.radio_button :is_deleted, true %>　有効
            </div>
            <div class="col-sm-1">
              <%= f.radio_button :is_deleted, false %>　退会
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6 offset-sm-3">
              <%= f.submit "変更を保存", class: 'btn btn-success', style: "width: 150px;" %>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>