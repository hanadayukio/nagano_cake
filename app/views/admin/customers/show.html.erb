<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
        <div class="row">
          <div class="col-lg-3">
            <p for="id">会員ID</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.id %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="fullname">氏名</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.last_name %>&nbsp;&nbsp;<%= @customer.first_name %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="fullname_kana">フリガナ</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.last_name_kana %>&nbsp;&nbsp;<%= @customer.first_name_kana %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="postal_code">郵便番号</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.postal_code %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="address">住所</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.address %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="telephone_number">電話番号</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.telephone_number %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="email">メールアドレス</p>
          </div>
          <div class="col-lg-6">
            <%= @customer.email %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p for="item_is_active">会員ステータス</p>
          </div>
          <div class="col-lg-6">
            <% if @customer.is_deleted %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <p></p>
          </div>
          <div class="col-lg-2">
            <%= link_to "編集する", edit_admin_customer_path(@customer[:id]), class: 'btn btn-success'  %>
          </div>
          <div class="col-lg-3">
            <!--<%= link_to "注文履歴一覧を見る", edit_admin_customer_path(@customer[:id]), class: 'btn btn-primary'  %>-->
          </div>
        </div>
        </div>
    </div>
  </div>
</div>