<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">会員一覧</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
        <table class="table table-hover tabel-inverse col-lg-12">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-secondary">退会</p>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class = " col-sm-12 d-flex justify-content-center">
      </div>
    </div>
  </div>
</div>