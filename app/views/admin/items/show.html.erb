

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">商品詳細</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
        <div class="row">
          <div class="col-lg-3">
            <%= image_tag @item.get_image(250,250) %>
          </div>
          <div class="col-lg-9">
            <div class="row">
              <div class="col-lg-3">
                <p for="item_name">商品名</p>
              </div>
              <div class="col-lg-6">
                <%= @item.name %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-3">
                <p for="item_introduction">商品説明</p>
              </div>
              <div class="col-lg-6">
                <%= @item.introduction %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-3">
                <p for="item_genre">ジャンル</p>
              </div>
              <div class="col-lg-6">
                <%= @item.genre_id %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-3">
                <p for="item_price">税抜価格</br>(税抜価格)</p>
              </div>
              <div class="col-lg-6">
                <p>
                  <%= number_to_currency(@item.price * (1 + 0.1), unit: "", delimiter: ',', precision:0,) %>(<%= number_to_currency(@item.price, unit: "", delimiter: ',', precision:0,) %>) 円
                </p>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-3">
                <p for="item_is_active">販売ステータス</p>
              </div>
              <div class="col-lg-6">
                <% if @item.is_active %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-secondary">販売停止中</p>
                <% end %>
              </div>
            </div>
          </div>
        <div class="col-sm-12 d-flex justify-content-center">
          <%= link_to "編集する", edit_admin_item_path(@item[:id]), class: 'btn btn-success btn-lg' %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>