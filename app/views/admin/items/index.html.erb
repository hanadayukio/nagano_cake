<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">商品一覧</h3>
      <a href="items/new" class="btn btn -primaary">
        <i class="fas fa-plus"></i>
      </a>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
        <table class="table table-hover tabel-inverse col-lg-12">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= number_to_currency(item.price, unit: "", delimiter: ',', precision:0,) %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-secondary">販売停止中</p>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>  
        <div class = " col-sm-12 d-flex justify-content-center" %>
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>