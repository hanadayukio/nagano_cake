
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">商品編集</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <div class="form-group row">
          <div class="col-sm-3">
            <label for="item_image">商品画像</label>
          </div>
          <div class="col-sm-6">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
            <label for="item_name">商品名</label>
          </div>
          <div class="col-sm-6 pl-0">
           　<%= f.text_field :name, size: "35" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
            <label for="item_introduction">商品説明</label>
          </div>
          <div class="col-sm-6 pl-0">
           　<%= f.text_area :introduction, size: "35x7" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
            <label for="item_genre">ジャンル</label>
          </div>
          <div class="col-sm-6 pl-0">
           　<%= f.collection_select :genre_id, Genre.all, :id, :name %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
            <label for="item_price">税抜価格</label>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :price, size: "35" %>円
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
            <label for="item_is_active">販売ステータス</label>
          </div>
          <div class="col-sm-2">
            <%= f.radio_button :is_active, true %>　販売中
          </div>
          <div class="col-sm-3">
            <%= f.radio_button :is_active, false %>　販売停止中
          </div>
        </div>
          <div class="d-flex justify-content-center">
            <%= f.submit '変更を保存', class: 'btn btn-success btn-lg' %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>